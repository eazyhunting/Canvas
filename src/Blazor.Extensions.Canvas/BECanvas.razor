@using Microsoft.AspNetCore.Components.Web
@inherits BECanvasComponent

<canvas @ref="_canvasRef"
  id=@Id
  width=@Width
  height=@Height
  onclick=@Click
  onmousewheel=@MouseWheel
  oncontextmenu=@ContextMenu
  @oncontextmenu:preventDefault=@ContextMenuPreventDefault
  @oncontextmenu:stopPropagation=@ContextMenuStopPropagation
  onmousedown=@MouseDown
  onmouseup=@MouseUp
  onmousemove=@MouseMove
  onmouseover=@MouseOver
  onmouseout=@MouseOut
  ondblclick=@DoubleClick
  onfocus=@Focus
  onblur=@Blur
  onkeydown=@KeyDown
  onkeyup=@KeyUp
  onkeypress=@KeyPress
  onload=@Load
></canvas>
